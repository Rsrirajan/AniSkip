{
  "name": "Anime",
  "type": "object",
  "properties": {
    "mal_id": {
      "type": "number",
      "description": "MyAnimeList ID"
    },
    "anilist_id": {
      "type": "number",
      "description": "AniList ID"
    },
    "title": {
      "type": "string",
      "description": "Anime title"
    },
    "title_english": {
      "type": "string",
      "description": "English title"
    },
    "title_japanese": {
      "type": "string",
      "description": "Japanese title"
    },
    "synopsis": {
      "type": "string",
      "description": "Anime synopsis"
    },
    "episodes": {
      "type": "number",
      "description": "Total episodes"
    },
    "status": {
      "type": "string",
      "description": "Airing status"
    },
    "aired_from": {
      "type": "string",
      "format": "date",
      "description": "Start date"
    },
    "aired_to": {
      "type": "string",
      "format": "date",
      "description": "End date"
    },
    "score": {
      "type": "number",
      "description": "Rating score"
    },
    "genres": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Genre list"
    },
    "studios": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Studio list"
    },
    "image_url": {
      "type": "string",
      "description": "Cover image URL"
    },
    "trailer_url": {
      "type": "string",
      "description": "Trailer URL"
    },
    "season": {
      "type": "string",
      "description": "Season (spring, summer, fall, winter)"
    },
    "year": {
      "type": "number",
      "description": "Year"
    }
  },
  "required": ["mal_id", "title"]
} 